<resources>
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/bgutama</item>
    <item name="colorPrimaryDark">@color/bgkedua</item>
    <item name="colorAccent">@color/bgketiga</item>
</style>

<style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/bgutama</item>
    <item name="colorPrimaryDark">@color/bgkedua</item>
    <item name="colorAccent">@color/bgketiga</item>
</style>

<style name="Theme.App.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorControlNormal">@color/bgutama</item>
    <item name="colorControlActivated">@color/bgkedua</item>
    <item name="colorControlHighlight">@color/bgketiga</item>
</style>

<!-- No Action Bar theme. -->
<style name="MyLightActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/bgutama</item>
    <item name="colorPrimaryDark">@color/bgkedua</item>
    <item name="colorAccent">@color/bgketiga</item>
</style>

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/imgkembali</item>
    </style>

</resources>